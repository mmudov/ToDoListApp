@{
    ViewData["Title"] = "Create / Edit";
}

@model ToDoListApp.Models.ToDoList

<div class="text-center">
    <h1 class="display-4">Create or edit a task</h1>
</div>

<form asp-action="CreateEditTaskForm" asp-asp-controller="Home">
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label>Task</label>
    <input class="form-control" type="text" placeholder="Add a task" asp-for="Task" />
       
    <input class="form-check-input" type="checkbox" asp-for="Completed" />
    <label class="form-check-label" for="Completed">Completed</label>

    <div class="mt-4">
        <button class="btn btn-primary" type="submit">Ok</button>
    </div>
</form>